@page "/search-questions"
@inherits SearchQuestionsComponentBase

@if(Questions != null){

<HxInputText @bind-Value="@SearchTerms" Placeholder="Enter search"/>
<br><br>
<div class="container">
  <div class="row">
    <div class="col-10">
      <h1>Search Results</h1>
    </div>
    <div class="col-2">
      <HxButton Text="Ask Question" Color="ThemeColor.Primary" />
    </div>
  </div>
</div>
<br><br>
<div class="container">
  <div class="row">
    <div class="col-10">
      <h3>@Questions.Count results</h3>
    </div>
    <div class="col-2">&nbsp;
    </div>
  </div>
</div>

<hr>

@foreach(var question in Questions)
{
  <QuestionItem Question="question" />
}
<HxPager CurrentPageIndex="0" TotalPages="6" />


}