@page "/view-question/{id}"
@inherits ViewQuestionAnswersComponentBase

@if (Question != null)
{
<PageTitle>@Question.Name</PageTitle>
<ViewQuestion Question="Question" />

<div class="container">
    <div class="row">
    <div class="col"><h1>@Answers.Count Answers</h1></div>
    </div>
</div>

@foreach(var answer in Answers){ <ViewAnswer Answer="answer" OnUpVote="OnAnswerUpVote" /> }

}

<hr>
<h1>Share Your Answer</h1>

<MarkdownEditor @bind-Value="@AnswerContent" 
                ValueHTMLChanged="@OnMarkdownValueHTMLChanged" />

@if (ValidationFailures.Count > 0)
{
    <ul>
        @foreach (var validationFailure in ValidationFailures)
        {
            <li>@validationFailure</li>
        }
    </ul>
}
<HxButton OnClick="OnSaveAnswerAsync" Color="ThemeColor.Primary">Save Answer</HxButton>
