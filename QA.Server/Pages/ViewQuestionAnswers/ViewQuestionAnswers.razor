@page "/view-question/{id}"
@inherits ViewQuestionAnswersComponentBase

@if (Question != null)
{
<PageTitle>@Question.Name</PageTitle>
<ViewQuestion Question="Question" />

<div class="container">
    <div class="row">
    <div class="col"><h1>@Answers.Count Answers</h1></div>
    </div>
</div>

@foreach(var answer in Answers)
{
    <ViewAnswer />
}

}